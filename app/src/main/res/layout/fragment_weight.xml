<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp">

    <TextView
        android:id="@+id/weightTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Your Weight"
        android:textSize="32sp"
        android:gravity="center"
        android:layout_marginBottom="32dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="192dp"
        android:gravity="center"
        android:orientation="horizontal">

        <com.shawnlin.numberpicker.NumberPicker
            android:id="@+id/number_picker1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            app:np_height="180dp"
            app:np_max="100"
            app:np_min="10"
            app:np_selectedTextSize="38sp"
            app:np_textSize="32sp"
            app:np_typeface="@string/material_motion_easing_decelerated"
            app:np_value="65"
            app:np_width="64dp" />

        <TextView
            android:id="@+id/dot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" . "
            android:textStyle="bold"
            android:textSize="26sp" />

        <com.shawnlin.numberpicker.NumberPicker
            android:id="@+id/number_picker2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            app:np_height="180dp"
            app:np_max="9"
            app:np_min="0"
            app:np_selectedTextSize="38sp"
            app:np_textSize="32sp"
            app:np_typeface="@string/material_motion_easing_decelerated"
            app:np_value="0"
            app:np_width="64dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/kgLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="kg"
        android:textSize="32sp"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/btnNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:text="Next"
        android:textSize="24sp"
        android:textStyle="bold" />
</LinearLayout>
